    <title>Signup</title>
</head>
<body>
  <section id="header">
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg">
            <a class="navbar-brand" href="/"><img src="shop.png" alt="" style="width: 40px;"> Store-On-The-Go</a>
            <button
              class="navbar-toggler"
              type="button"
              data-toggle="collapse"
              data-target="#navbarSupportedContent"
              aria-controls="navbarSupportedContent"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
            <i class="fas fa-ellipsis-v nav-toggler-icon"></i>
            <!-- <span class="navbar-toggler-icon"></span> -->
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                  <a class="nav-link" href="/">Location</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/signup">Sign up</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link nav-btn mx-auto" href="/login">Log in</a>
                </li>
              </ul>
            </div>
          </nav>
    </div>
</section>
    <section id="signup">
      <form action="/signup" method="POST" class="auth-form container-fluid">
        <div class="row">
          <div class="col-lg-6 col-md-6 col-sm-10">
            <h1 class="home-h1">Get started</h1>
                <label for="username" class="control-label">Username</label>
                <input type="text" name="username" class="form-control" autocomplete="off" autofocus>
                <label for="email" class="control-label">Email</label>
                <input type="email" name="email" class="form-control" autocomplete="off">
                <label for="password" class="control-label">Password</label>
                <input type="password" name="password" class="form-control">
          </div>
          <img src="signup.svg" class="col-md-4 col-sm-8 ml-auto" style="margin-top: 50px;" alt="">
          <h3 class="col-md-8 col-sm-10 ml-auto custom-h3">few more things<br>and you are all set!</h3>
        </div>
        <div class="row">
          <div class="col-lg-6 col-md-6 col-sm-10">
            <label for="address" class="control-label">Address</label>
            <textarea class="form-control" name="address" rows="3"></textarea>
        </div>
        </div>
        <div class="row">
          <div class="col-lg-6 col-md-6 col-sm-10">
            <label for="name" class="control-label">Name</label>
            <input type="text" name="name" class="form-control" autocomplete="off">
            <label for="contact" class="control-label">Contact</label>
            <input type="text" name="contact" class="form-control" autocomplete="off">
          </div>
          <div class="col-lg-4 col-md-4 ml-auto">
            <div>
              <label for="city" class="control-label">City</label>
              <input type="text" name="city" class="form-control search-location" autocomplete="off">
              <div class="suggestions"></div>
            </div>
            <div class="row">
              <button type="submit" name="consumer" class="btn btn-outline-primary btn-consumer col-sm-5">I'm a consumer</button>
              <button type="submit" name="seller" class="btn btn-outline-primary btn-seller col-sm-5">I'm a seller</button>
            </div>
            
      </div>
        </div>
      </form>
    </section>
    <section id="footer">
        <div class="container-fluid">
          <p>Â© Copyright <span id="Copyright"></span> Store-On-The-Go</p>
        </div>
    </section>

    <script src="script.js"></script>
