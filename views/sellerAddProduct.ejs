    <title>Home page (Seller)</title>
</head>
<body>
    <section id="header">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg">
                <a class="navbar-brand" href="/seller"><img src="shop.png" alt="" style="width: 40px;"> Store-On-The-Go</a>
                <button
                  class="navbar-toggler"
                  type="button"
                  data-toggle="collapse"
                  data-target="#navbarSupportedContent"
                  aria-controls="navbarSupportedContent"
                  aria-expanded="false"
                  aria-label="Toggle navigation"
                >
                <i class="fas fa-ellipsis-v nav-toggler-icon"></i>
                <!-- <span class="navbar-toggler-icon"></span> -->
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                  <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                      <a class="nav-link" href="/seller">My Products</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/seller/transactions">Transactions</a>
                    </li>
                    <li class="nav-item">
                      <div class="dropdown">
                        <button class="btn dropdown-toggle nav-btn mx-auto" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          Profile <i class="fas fa-user-circle"></i>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                          <a class="dropdown-item" href="/seller/profile">My Account</a>
                          <div class="dropdown-divider"></div>
                          <a class="dropdown-item" href="/logout">Logout <i class="fas fa-sign-out-alt"></i></a>
                        </div>
                      </div>
                    </li>
                  </ul>
                </div>
              </nav>
        </div>
    </section>
    <section id="s-productDetails" class="container-fluid">
        <form action="/addProduct" method="POST" class="auth-form container-fluid">
            <div class="row">
              <div class="col-lg-6 col-md-6 col-sm-10">
                <h1 class="home-h1">Product details</h1>
                    <label for="name" class="control-label">Name</label>
                    <input type="text" name="name" class="form-control" autocomplete="off" autofocus required>
                    <label for="quantity" class="control-label">Quantity</label>
                    <input type="number" name="quantity" class="form-control" autocomplete="off" required min="1">
                    <label for="price" class="control-label">Price</label>
                    <input type="text" name="price" class="form-control" required>
              </div>
              <img src="signup.svg" class="col-md-4 col-sm-8 ml-auto" style="margin-top: 50px;" alt="">
              <h3 class="col-md-8 col-sm-10 ml-auto custom-h3">Describe your product</h3>
            </div>
            <div class="row">
              <div class="col-lg-6 col-md-6 col-sm-10">
                <label for="description" class="control-label">Description</label>
                <textarea class="form-control" name="description" rows="3" required spellcheck="false"></textarea>
            </div>
            </div>
            <div class="row">
              <div class="col-lg-6 col-md-6 col-sm-10">
                <label for="image" class="control-label">Upload an image</label>
                <input type="file" name="image" class="form-control" autocomplete="off" required>
                <!-- <label for="contact" class="control-label">Contact</label>
                <input type="text" name="contact" class="form-control" autocomplete="off" required> -->
              </div>
              <div class="col-lg-4 col-md-4 ml-auto">
                <!-- <div>
                  <label for="city" class="control-label">City</label>
                  <input type="text" name="city" class="form-control search-location" autocomplete="off" required>
                  <div class="suggestions"></div>
                </div> -->
                <div class="row">
                  <button type="submit" name="person" value="consumer" class="btn btn-outline-primary btn-consumer col-sm-5">I'm a consumer</button>
                  <button type="submit" name="person" value="seller"  class="btn btn-outline-primary btn-seller col-sm-5">I'm a seller</button>
                </div>
                
          </div>
            </div>
          </form>
        
    </section>
    <section id="footer">
        <div class="container-fluid">
          <p>Â© Copyright <span id="Copyright"></span> Store-On-The-Go</p>
        </div>
    </section>

    <script src="script.js"></script>
