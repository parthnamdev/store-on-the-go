<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- google fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Cabin:wght@400;500;700&display=swap" rel="stylesheet">
    
    <!-- bootstrap css -->
    <link rel="stylesheet" href="dist/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    
    <!-- custom css -->
    <link rel="stylesheet" href="styles.css">

    <!--Font Awesome -->
    <link rel="stylesheet" href="fontawesome-free/css/all.css">
    
    

    <title>My cart</title>
</head>
<body>
  <section id="header">
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg">
            <a class="navbar-brand" href="/consumer/<%= city %>"><img src="shop.png" alt="" style="width: 40px;"> Store-On-The-Go</a>
            <button
              class="navbar-toggler"
              type="button"
              data-toggle="collapse"
              data-target="#navbarSupportedContent"
              aria-controls="navbarSupportedContent"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
            <i class="fas fa-ellipsis-v nav-toggler-icon"></i>
            <!-- <span class="navbar-toggler-icon"></span> -->
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                  <a class="nav-link" href="/consumer/<%= city %>">Explore</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/consumer/location">Location</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/consumer/cart">Cart <i class="fas fa-shopping-cart"></i></a>
                </li>
                <li class="nav-item">
                  <div class="dropdown">
                    <button class="btn dropdown-toggle nav-btn mx-auto" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Profile <i class="fas fa-user-circle"></i>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                      <a class="dropdown-item" href="/consumer/profile">My Account</a>
                      <div class="dropdown-divider"></div>
                      <a class="dropdown-item" href="/logout">Logout <i class="fas fa-sign-out-alt"></i></a>
                    </div>
                  </div>
                </li>
              </ul>
            </div>
          </nav>
    </div>
</section>
    <section id="cart">
        <div class="container-fluid row">
          <% products.forEach(element => { %>
            <div class="col-lg-4 col-md-6 cart-item">
              <div class="card mx-auto">
                <a href=""><img src="<%= element.image %>" class="card-img-top" alt="..."></a>
                <div class="card-body text-left">
                  <a href=""><h5 class="card-title"><%=element.name%></h5></a>
                  <p class="card-text"><%=element.description%></p>
                  <span href="#" class="cart-price">₨. <%=element.price%></span>
                  <span class="cart-quantity"><i class="fas fa-minus fa-1x card-link cart-minus"></i><span class="card-link cart-quantity-number">1</span><i class="fas fa-plus card-link cart-minus"></i></span>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
    </section>
    <section id="address">
      <div class="container-fluid">
        <div class="row">
          <h1 class="col my-auto">Select your address</h1>
        </div>
        <!--foreach  -->
      <div class="form-check">
        <input class="form-check-input" type="radio" name="addresses" id="exampleRadios0" value="option1">
        <label class="form-check-label" for="exampleRadios0">
          Default radio
        </label>
      </div>
      <!--  -->
      </div>
    </section>
    <div class="row container-fluid">
      <img class="col-md-5 col-sm-6 my-auto ml-auto" src="pay.svg"></img>
    </div>
    <section id="payment">
      <div class="container-fluid">
        <div class="row">
          <h1 class="col my-auto">Choose payment option</h1>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="payment-option" id="exampleRadios1" value="option1">
          <label class="form-check-label" for="exampleRadios1">
            Pay at shop
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="payment-option" id="exampleRadios2" value="option1">
          <label class="form-check-label" for="exampleRadios2">
            Cash on delivery
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="payment-option" id="exampleRadios3" value="option1">
          <label class="form-check-label" for="exampleRadios3">
            Online payment
          </label>
        </div>
        <button type="submit" name="" class="btn btn-outline-primary btn-seller col-lg-3 col-md-4 col-sm-5">Proceed to Checkout <i class="fas fa-arrow-alt-circle-right"></i></button>
        </div>
    </section>
    <section id="footer">
        <div class="container-fluid">
          <p>© Copyright <span id="Copyright"></span> Store-On-The-Go</p>
        </div>
    </section>

    <script src="script.js"></script>
    <script src="dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="core/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="dist/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
</body>
</html>