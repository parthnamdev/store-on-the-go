          <div class="cart-item">
            <div class="card mx-auto">
              <form action="/consumer/addToCart" method="post">
              <input type="hidden" name="id" value="<%= element._id %>">
              <img src="data:<%= element.image.mimetype %>;base64,<%= element.image.data.toString('base64') %>" class="card-img-top" alt="...">
              <div class="card-body text-left">
                <h5 class="card-title"><%= element.name %></h5>
                <p class="card-text custom-height-card-text"><%= element.description %></p>
                <p class="card-text">Stock: <%= element.quantity %></p>
                <hr>
                <h5 class="card-title">Seller Info:</h5>
                <div class="col-md-6">
                  <table>
                    <tr><td class="font-weight-bold custom-table first-col">Name</td><td class="custom-td"><%= seller.name %></td></tr>
                    <tr><td class="font-weight-bold custom-table first-col">Contact</td><td class="custom-td"><%= seller.contact %></td></tr>
                    <tr><td class="font-weight-bold custom-table first-col">Email</td><td class="custom-td"><%= seller.email %></td></tr>
                    <tr><td class="font-weight-bold custom-table first-col">City</td><td class="custom-td"><%= seller.city %></td></tr>
                  </table>
                </div>
                <hr>
                <span href="#" class="cart-price">₨. <%= element.price %></span>
                <button type="submit" class="cart-quantity add-to-cart btn btn-outline-info">Add to cart <i class="fas fa-cart-plus card-link"></i></button>
              </div>
            </form>
            </div>
          </div>
        </div>
    </section>
    <section id="footer">
        <div class="container-fluid">
          <p>© Copyright <span id="Copyright"></span> Store-On-The-Go</p>
        </div>
