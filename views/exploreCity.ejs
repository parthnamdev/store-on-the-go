</head>
<body>
    <section id="header">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg">
                <a class="navbar-brand" href="/"><img src="shop.png" alt="" style="width: 40px;"> Store-On-The-Go</a>
                <button
                  class="navbar-toggler"
                  type="button"
                  data-toggle="collapse"
                  data-target="#navbarSupportedContent"
                  aria-controls="navbarSupportedContent"
                  aria-expanded="false"
                  aria-label="Toggle navigation"
                >
                <i class="fas fa-ellipsis-v nav-toggler-icon"></i>
                  <!-- <span class="navbar-toggler-icon"></span> -->
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                  <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                      <a class="nav-link" href="/">Location</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/signup">Sign up</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link nav-btn mx-auto" href="/login">Log in</a>
                    </li>
                  </ul>
                </div>
              </nav>
        </div>
    </section>
    <section id="location">
      <div id="stickySearchBar">
      
          <div class="sticky-search-box mx-auto">
              <form method="post" action="/explore" id="wordSubmit">
                <input method="" name="input" action="" class="sticky-input-box search-location" type="text" id="word_input" autocomplete="off" autofocus required
                  placeholder="Search" />
                <button class="sticky-button" href="" id="searchbtn">
                  <i class="fas fa-search"></i>
                </button>
              </form>
              <script>
                var input = document.getElementById("word_input");
            
                  input.addEventListener("keyup", function (event) {
                  // Number 13 is the "Enter" key on the keyboard
                  if (event.keyCode === 13) {
                    // Cancel the default action, if needed
                    event.preventDefault();
                    // Trigger the button element with a click
                    document.getElementById("searchbtn").click();
                  }
                });
              </script>
              <div class="product-suggestions"></div>
              
            </div>
          </div>
      <div class="container-fluid explore-city-header">
        <div class="row">
          <div class="col-lg-6 col-md-6 col-sm-6">
            <img src="explore-city.svg" alt="" class="ml-auto explore-image">
            </div>
          <h1 class="col-lg-6 col-md-6 col-sm-6 my-auto pr-0">Explore city</h1>
        </div>
      </div>
    </section>
    <section id="products">
        <div class="container-fluid">
            
        </div>
    </section>
